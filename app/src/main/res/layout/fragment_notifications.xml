<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_marginBottom="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/uu"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9104429451"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_photo"
        app:layout_constraintStart_toStartOf="@+id/img_profile_photo"
        app:layout_constraintTop_toBottomOf="@+id/img_profile_photo" />

    <Button
        android:id="@+id/btn_profile_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="Orders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_number" />

    <Button
        android:id="@+id/btn_profile_appointment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Appointment"
        app:layout_constraintEnd_toEndOf="@+id/btn_profile_order"
        app:layout_constraintStart_toStartOf="@+id/btn_profile_order"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile_order" />


</androidx.constraintlayout.widget.ConstraintLayout>