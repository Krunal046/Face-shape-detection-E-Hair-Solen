<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:backgroundTint="@color/purple_500"
        android:elevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_tailor_image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_20sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_pending_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_tailor_image"
                app:layout_constraintTop_toTopOf="@+id/img_tailor_image" />

            <TextView
                android:id="@+id/tv_pending_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_pending_name"
                app:layout_constraintStart_toStartOf="@+id/tv_pending_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_pending_name" />

            <TextView
                android:id="@+id/tv_pending_expected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Date"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/tv_pending_mobile"
                app:layout_constraintStart_toStartOf="@+id/tv_pending_mobile"
                app:layout_constraintTop_toBottomOf="@+id/tv_pending_mobile" />

            <TextView
                android:id="@+id/tv_pending_delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delay"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tv_pending_expected_date"
                app:layout_constraintStart_toStartOf="@+id/tv_pending_expected_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_pending_expected_date" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>